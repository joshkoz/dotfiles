[user]
	email = josh@joshkoz.com
	name = "Josh Koz"
	signingkey = ssh-rsa 
[commit]
	template = ~/.git-templates/git-commit-template
	gpgsign = true
    verbose = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/opt/1Password/op-ssh-sign"
	allowedSignersFile = ~/.ssh/allowed_signers
[init]
	defaultBranch = master
[core]
	autocrlf = input
	pager = delta 
	editor = nvim
[push]
	default = current
	autoSetupRemote = true
[pull]
	ff = only
[fetch]
    prune = true
    pruneTags = true
    all = true
[alias]
	lg = log --reverse --color -20 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	bl = blame -w -C -C -C
	fs = "!git switch $(git branch | fzf)" # Fuzzy Switch branches
    dt = "! args=$@; shift $#; nvim -c \"DiffviewOpen $args\""
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = false 
[merge]
	# conflictStyle = zdiff3
	conflictStyle = merge 
    tool = vimdiff
[rebase]
    updateRefs = true
[mergetool]
    keepBackup = false
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
    colorMoved = plain 
	algorithm = histogram
    renames = true
[diff "sqldiff"]
    command = gitsqldiff
[rerere]
	enabled = true
    autoupdate = true
[tag]
	gpgsign = true
    sort = version:refname

[includeIf "gitdir:~/work/"]
	path = ~/work/.gitconfig
[branch]
	sort = -committerdate
[column]
	ui = auto
[fetch]
	prune = true
