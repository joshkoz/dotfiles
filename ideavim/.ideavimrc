let mapleader = " "

source ~/.vimrc

nnoremap gh :action ShowErrorDescription<CR>
nnoremap <leader>gI <Action>(GotoImplementation)
nnoremap <leader>gt <Action>(GotoTest)
map gc :action CommentByLineComment<CR>
nnoremap <C-h> :action NextSplitter<CR>
noremap <C-l> :action NextSplitter<CR>
nnoremap <Leader><Leader> <C-6>
nnoremap <Leader>la :action ShowIntentionActions<CR>
" nnoremap <leader>e :action ActivateProjectToolWindow<CR>
nnoremap <leader>lr :action RenameElement<CR>
map <leader>e :NERDTreeToggle<CR>
map <Leader>o :action ViewToolButtons<CR>
map <Leader>d :action ActivateDebugToolWindow<CR>
map <Leader>j :action HideActiveToolWindow<CR>

map <leader>f <action>(GotoFile)

set showmode
set showcmd
set incsearch
set notimeout
set inccommand
set relativenumber
set number 

" Plugins
set breakindent
set surround
set NERDTree
set highlightedyank
set which-key
let g:WhichKey_FontSize = 16
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#f335b2"
let g:WhichKey_SortOrder = "by_key_prefix_first"


